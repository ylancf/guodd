<LinearLayout
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xmlns:android="http://schemas.android.com/apk/res/android"
        xsi:noNamespaceSchemaLocation="layout.xsd"
        android:layout_height="match_parent"
        android:gravity="center_horizontal"
        android:layout_width="match_parent">

    <LinearLayout android:layout_width="match_parent"
                  android:layout_height="match_parent"
                  android:tag="forget_root"
                  android:gravity="center_horizontal"
                  android:orientation="vertical">

        <LinearLayout android:layout_width="match_parent"
                      android:layout_height="match_parent"
                      android:tag="forget_ed_layout"
                      android:gravity="center_horizontal"
                      android:orientation="vertical">

            <LinearLayout
                    android:layout_height="match_parent"
                    android:layout_width="match_parent"
                    android:tag="forget_question_layout"
                    android:gravity="bottom"
                    android:orientation="vertical">
                <TextView android:layout_height="wrap_content"
                          android:layout_width="wrap_content"
                          android:textSize="17dp"
                          android:textColor="#222222"
                          android:paddingLeft="3dp"
                          android:paddingBottom="5dp"
                          android:paddingRight="5dp"
                          android:text="输入你的账号"/>
                <LinearLayout android:layout_height="wrap_content"
                              android:layout_width="match_parent"
                              android:tag="for_account_layout"
                              android:orientation="horizontal">
                    <EditText android:layout_width="250dp"
                              android:textSize="15dp"
                              android:tag="for_account_ed"
                              android:layout_height="wrap_content"
                              android:background="null"
                              android:hint="账号"/>
                    <TextView android:background="#5F000000"
                              android:layout_width="1dp"
                              android:paddingLeft="5dp"
                              android:layout_height="match_parent"/>

                    <ImageView android:tag="for_go_img"
                               android:layout_gravity="right"
                               android:padding="3dp"
                               android:layout_height="match_parent"
                               android:layout_width="match_parent"

                    />
                </LinearLayout>

                <LinearLayout android:layout_height="wrap_content"
                              android:layout_width="match_parent"
                              android:orientation="horizontal">
                    <TextView android:layout_height="wrap_content"
                              android:layout_width="wrap_content"
                              android:textColor="#222222"
                              android:textSize="17dp"
                              android:paddingLeft="3dp"
                              android:paddingBottom="5dp"
                              android:paddingRight="5dp"
                              android:paddingTop="10dp"
                              android:text="您的问题是:"/>
                    <TextView android:layout_height="wrap_content"
                              android:layout_width="match_parent"
                              android:tag="forget_question_tv"
                              android:padding="5dp"
                              android:textSize="17dp"
                              android:textColor="#c020a0"
                              android:hint="点击箭头获得"
                              android:text=""/>
                </LinearLayout>

                <EditText android:layout_width="match_parent"
                          android:layout_height="wrap_content"
                          android:tag="for_answer_ed"
                          android:textSize="15dp"
                          android:hint="您的回答"/>

            </LinearLayout>

            <LinearLayout
                    android:layout_height="match_parent"
                    android:layout_width="match_parent"
                    android:visibility="gone"
                    android:gravity="bottom"
                    android:tag="forget_reset_layout"
                    android:orientation="vertical">

                <TextView android:layout_height="wrap_content"
                          android:layout_width="match_parent"
                          android:textColor="#222222"
                          android:textSize="17dp"
                          android:paddingLeft="3dp"
                          android:paddingBottom="5dp"
                          android:paddingRight="5dp"
                          android:paddingTop="10dp"
                          android:text="输入您的新密码"/>
                <EditText android:layout_width="match_parent"
                          android:layout_height="wrap_content"
                          android:tag="for_password_ed"
                          android:textSize="15dp"
                          android:hint="新密码"/>
                <TextView android:paddingTop="5dp"/>
                <EditText android:layout_width="match_parent"
                          android:layout_height="wrap_content"
                          android:tag="for_confirm_ed"
                          android:textSize="15dp"
                          android:hint="确认密码"/>
            </LinearLayout>


        </LinearLayout>
        <TextView android:paddingBottom="15dp"
                  android:layout_height="wrap_content"
                  android:layout_width="match_parent"/>


    </LinearLayout>

</LinearLayout>