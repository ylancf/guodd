<?xml version="1.0" encoding="UTF-8" ?>
<!--我的信息布局-->
<LinearLayout
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xmlns:android="http://schemas.android.com/apk/res/android"
        xsi:noNamespaceSchemaLocation="layout.xsd"
        android:layout_height="match_parent"
        android:layout_width="match_parent">

    <LinearLayout
            android:layout_height="match_parent"
            android:layout_width="match_parent"
            android:tag="myInfo_root_layout"
            android:orientation="vertical">


        <LinearLayout android:layout_height="250dp"
                      android:layout_width="match_parent"
                      android:orientation="vertical"
                      android:background="#FAFAFA"
                      android:gravity="center"
                      android:tag="user_info_layout"
                      android:layout_gravity="center"
                      android:paddingLeft="10dp"
                      android:paddingRight="10dp"
                      android:paddingTop="10dp">

            <TextView android:layout_width="match_parent"
                      android:layout_height="wrap_content"
                      android:textSize="17dp"
                      android:gravity="center"
                      android:text="欢迎光临"/>
            <TextView android:layout_width="match_parent"
                      android:layout_height="wrap_content"
                      android:textSize="17dp"
                      android:gravity="center"
                      android:text="东方一条龙"/>
            <TextView android:layout_width="match_parent"
                      android:layout_height="wrap_content"
                      android:textSize="17dp"
                      android:gravity="center"
                      android:text="私人定制联系:vxylancf"/>
            <TextView android:layout_width="match_parent"
                      android:layout_height="wrap_content"
                      android:textSize="17dp"
                      android:gravity="center"
                      android:text="技术员联系:gholson"/>
        </LinearLayout>

        <LinearLayout android:layout_width="match_parent"
                      android:layout_height="wrap_content"
                      android:padding="20dp"
                      android:layout_gravity="center_horizontal"
                      android:orientation="vertical">
            <TextView android:layout_height="wrap_content"
                      android:layout_width="match_parent"
                      android:paddingTop="5dp"
                      android:text="你要置顶的脚步编号"/>
            <EditText android:layout_width="match_parent"
                      android:layout_height="wrap_content"
                      android:paddingTop="5dp"
                      android:tag="myself_top_ed"
                      android:hint="例:2|23|16(重启生效)"/>

            <TextView android:layout_height="wrap_content"
                      android:layout_width="match_parent"
                      android:paddingTop="5dp"
                      android:text="你要删除的脚步编号"/>
            <EditText android:layout_width="match_parent"
                      android:layout_height="wrap_content"
                      android:paddingTop="5dp"
                      android:tag="myself_delete_ed"
                      android:hint="例:2|5|16(重启生效)"/>
        </LinearLayout>

        <LinearLayout android:layout_width="match_parent"
                      android:layout_height="match_parent"
                      android:orientation="vertical"
                      android:layout_marginBottom="15dp"
                      android:gravity="bottom"
                      android:tag="myInfo_bt_layout">

        </LinearLayout>


    </LinearLayout>


</LinearLayout>